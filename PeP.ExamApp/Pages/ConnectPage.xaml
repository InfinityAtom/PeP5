<Page x:Class="PeP.ExamApp.Pages.ConnectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      Title="Connect"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with Close Button -->
        <Border Grid.Row="0" Background="#1E293B" Padding="16,8">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Assets/logo.png" Height="20" Width="20" Margin="0,0,8,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <TextBlock Text="PeP Secure Exam Browser" 
                               Foreground="#94A3B8" 
                               FontSize="13"
                               VerticalAlignment="Center"/>
                </StackPanel>
                <Button Content="âœ• Close" 
                        HorizontalAlignment="Right"
                        Click="OnCloseClick"
                        Cursor="Hand"
                        Padding="12,6"
                        Background="#DC2626"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                    CornerRadius="4" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#B91C1C"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border Style="{StaticResource CardStyle}" MaxWidth="520" Margin="40">
                <StackPanel>
                    <!-- Logo/Icon Area -->
                    <Border Background="{StaticResource PrimaryGradientBrush}" CornerRadius="20" Width="100" Height="100" Margin="0,0,0,24" HorizontalAlignment="Center">
                        <Image Source="/Assets/logo.png" Width="60" Height="60" HorizontalAlignment="Center" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality"/>
                    </Border>

                    <!-- Header -->
                    <TextBlock Text="PeP Secure Exam Browser" 
                               Style="{StaticResource SubheadingStyle}"
                               TextAlignment="Center"/>
                    <TextBlock Text="Connect to your exam server to get started" 
                               Style="{StaticResource BodyStyle}"
                               TextAlignment="Center"
                               Margin="0,8,0,32"/>

                    <!-- Server URL Input -->
                    <TextBlock Text="Server URL" Style="{StaticResource LabelStyle}"/>
                    <TextBox x:Name="ServerUrlTextBox" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Text="https://"/>

                    <!-- Example hint -->
                    <TextBlock Text="Example: https://pep.yourschool.edu" 
                               Style="{StaticResource BodyStyle}"
                               Foreground="{StaticResource TextMutedBrush}"
                               FontSize="12"
                               Margin="0,6,0,0"/>

                    <!-- Error Message -->
                    <Border x:Name="ErrorBorder" 
                            Background="#FEF2F2" 
                            BorderBrush="#FECACA" 
                            BorderThickness="1" 
                            CornerRadius="8" 
                            Padding="12"
                            Margin="0,16,0,0"
                            Visibility="Collapsed">
                        <TextBlock x:Name="ErrorText" 
                                   Foreground="#DC2626" 
                                   TextWrapping="Wrap"
                                   FontSize="13"/>
                    </Border>

                    <!-- Connect Button -->
                    <Button x:Name="ContinueButton" 
                            Content="Connect to Server" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,24,0,0"
                            Click="OnContinueClick"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Padding="20" Background="Transparent">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="ðŸ”’ This application uses SafeExamBrowser-like technology" 
                           Style="{StaticResource BodyStyle}"
                           FontSize="12"
                           Foreground="{StaticResource TextMutedBrush}"
                           TextAlignment="Center"/>
                <TextBlock Text="to ensure exam integrity and prevent cheating."
                           Style="{StaticResource BodyStyle}"
                           FontSize="12"
                           Foreground="{StaticResource TextMutedBrush}"
                           TextAlignment="Center"
                           Margin="0,2,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>

