<Window x:Class="PeP.ExamApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PeP.ExamApp"
        mc:Ignorable="d"
        Title="PeP Secure Exam Browser" 
        Icon="Assets/logo.png"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Topmost="True"
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        
        <!-- Security Violation Overlay -->
        <Border x:Name="SecurityOverlay" 
                Background="#CCEF4444" 
                Visibility="Collapsed"
                Opacity="0">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="⚠️ Security Violation Detected" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"
                           TextAlignment="Center"/>
                <TextBlock x:Name="SecurityViolationText" 
                           Text="Attempting to switch applications is not allowed during the exam."
                           FontSize="16"
                           Foreground="White"
                           Margin="0,12,0,0"
                           TextAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="500"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
