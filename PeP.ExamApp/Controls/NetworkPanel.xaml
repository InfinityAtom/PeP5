<UserControl x:Class="PeP.ExamApp.Controls.NetworkPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Width="320"
             d:DesignHeight="400">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </UserControl.Resources>

    <Border Background="#1E293B" 
            BorderBrush="#334155" 
            BorderThickness="1" 
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#0F172A" CornerRadius="8,8,0,0">
                <Grid Margin="16,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel>
                        <TextBlock Text="Network Settings" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                        <TextBlock x:Name="ConnectionStatusText"
                                   Text="Connected" 
                                   Foreground="#10B981" 
                                   FontSize="11"
                                   Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            x:Name="CloseButton"
                            Content="âœ•" 
                            Background="Transparent"
                            Foreground="#94A3B8"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand"
                            Click="OnCloseClick"
                            Padding="8,4"/>
                </Grid>
            </Border>

            <!-- Current Connection -->
            <Border Grid.Row="1" Background="#0F172A" Margin="8,8,8,0" CornerRadius="6" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Background="#1E40AF" CornerRadius="4" Padding="8" VerticalAlignment="Center">
                        <TextBlock x:Name="ConnectionIcon" Text="ðŸ“¶" FontSize="16"/>
                    </Border>
                    
                    <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="CurrentNetworkName" 
                                   Text="Not Connected" 
                                   Foreground="White" 
                                   FontSize="13"
                                   FontWeight="Medium"/>
                        <TextBlock x:Name="CurrentNetworkType" 
                                   Text="WiFi" 
                                   Foreground="#64748B" 
                                   FontSize="11"/>
                    </StackPanel>
                    
                    <Button Grid.Column="2" 
                            x:Name="DisconnectButton"
                            Content="Disconnect"
                            Background="#DC2626"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,6"
                            FontSize="11"
                            Cursor="Hand"
                            Click="OnDisconnectClick"
                            Visibility="Collapsed"/>
                </Grid>
            </Border>

            <!-- Available Networks List -->
            <Grid Grid.Row="2" Margin="8,8,8,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Margin="4,0,4,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="Available Networks" 
                               Foreground="#94A3B8" 
                               FontSize="11"
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>
                    
                    <Button Grid.Column="1"
                            x:Name="RefreshButton"
                            Content="ðŸ”„ Refresh"
                            Background="#1F2937"
                            Foreground="#94A3B8"
                            BorderThickness="0"
                            Padding="8,4"
                            FontSize="10"
                            Cursor="Hand"
                            Click="OnRefreshClick"/>
                </Grid>
                
                <!-- Loading Indicator -->
                <Border Grid.Row="1" 
                        x:Name="LoadingPanel"
                        Background="#0F172A" 
                        CornerRadius="6"
                        Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ”" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="Scanning for networks..." 
                                   Foreground="#94A3B8" 
                                   FontSize="12"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Network List -->
                <ListBox Grid.Row="1"
                         x:Name="NetworkList"
                         Background="Transparent"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         SelectionChanged="OnNetworkSelected">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Border" 
                                                Background="#0F172A" 
                                                CornerRadius="6" 
                                                Margin="0,2"
                                                Padding="12,10"
                                                Cursor="Hand">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#1F2937"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#1E40AF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding SignalIcon}" 
                                           FontSize="14" 
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"/>
                                
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                               Foreground="White" 
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding SecurityType}" 
                                               Foreground="#64748B" 
                                               FontSize="10"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ”’" 
                                               FontSize="10"
                                               Visibility="{Binding IsSecured, Converter={StaticResource BoolToVisibility}}"
                                               Margin="0,0,4,0"/>
                                    <TextBlock Text="{Binding SignalStrength}" 
                                               Foreground="#64748B" 
                                               FontSize="10"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- No Networks Message -->
                <Border Grid.Row="1" 
                        x:Name="NoNetworksPanel"
                        Background="#0F172A" 
                        CornerRadius="6"
                        Visibility="Collapsed">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                        <TextBlock Text="ðŸ“¡" FontSize="24" HorizontalAlignment="Center"/>
                        <TextBlock Text="No networks found" 
                                   Foreground="#94A3B8" 
                                   FontSize="12"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                        <TextBlock Text="Make sure WiFi is enabled" 
                                   Foreground="#64748B" 
                                   FontSize="10"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Ethernet Status -->
            <Border Grid.Row="3" Background="#0F172A" Margin="8" CornerRadius="6" Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="ðŸ”Œ" FontSize="14" VerticalAlignment="Center"/>
                    
                    <TextBlock Grid.Column="1" 
                               Text="Ethernet" 
                               Foreground="#94A3B8" 
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    
                    <Border Grid.Column="2" 
                            x:Name="EthernetStatus"
                            Background="#064E3B" 
                            CornerRadius="4" 
                            Padding="8,4">
                        <TextBlock x:Name="EthernetStatusText" 
                                   Text="Connected" 
                                   Foreground="#10B981" 
                                   FontSize="10"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
