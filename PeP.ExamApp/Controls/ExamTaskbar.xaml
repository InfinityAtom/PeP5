<UserControl x:Class="PeP.ExamApp.Controls.ExamTaskbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PeP.ExamApp.Controls"
             mc:Ignorable="d"
             Height="40"
             d:DesignWidth="800">

    <Grid>
        <Border Background="#1E293B" BorderBrush="#334155" BorderThickness="0,1,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left Section - App Info -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                <!-- Logo -->
                <Image Source="/Assets/logo.png" Height="24" Width="24" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                
                <Border Background="#3B82F6" CornerRadius="4" Padding="8,4" Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ”’" FontSize="12" Margin="0,0,6,0"/>
                        <TextBlock Text="SECURE EXAM MODE" 
                                   Foreground="White" 
                                   FontSize="11" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                
                <TextBlock x:Name="ExamTitleText" 
                           Text="Exam" 
                           Foreground="#94A3B8" 
                           FontSize="12"
                           VerticalAlignment="Center"
                           MaxWidth="250"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <!-- Center Section - Status Indicators -->
            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                
                <!-- Internet Status -->
                <Border x:Name="InternetStatusBorder" 
                        Background="#1F2937" 
                        CornerRadius="4" 
                        Padding="10,5"
                        Margin="4,0"
                        Cursor="Hand"
                        MouseLeftButtonDown="OnInternetToggleClick">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="InternetIndicator" 
                                 Width="8" Height="8" 
                                 Fill="#10B981" 
                                 Margin="0,0,8,0"/>
                        <TextBlock x:Name="InternetStatusText" 
                                   Text="Online" 
                                   Foreground="#94A3B8" 
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Violation Counter -->
                <Border x:Name="ViolationBorder"
                        Background="#7F1D1D" 
                        CornerRadius="4" 
                        Padding="10,5"
                        Margin="4,0"
                        Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš ï¸" FontSize="10" Margin="0,0,6,0"/>
                        <TextBlock x:Name="ViolationCountText" 
                                   Text="0 violations" 
                                   Foreground="#FCA5A5" 
                                   FontSize="11"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Right Section - Clock and Exit -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                
                <!-- Date -->
                <TextBlock x:Name="DateText" 
                           Text="Dec 20, 2025" 
                           Foreground="#64748B" 
                           FontSize="11"
                           VerticalAlignment="Center"
                           Margin="0,0,16,0"/>

                <!-- Clock -->
                <Border Background="#1F2937" CornerRadius="4" Padding="12,5" Margin="0,0,12,0">
                    <TextBlock x:Name="ClockText" 
                               Text="00:00:00" 
                               Foreground="#E2E8F0" 
                               FontSize="13"
                               FontWeight="SemiBold"
                               FontFamily="Consolas"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Safe Exit Button -->
                <Button x:Name="ExitButton"
                        Click="OnExitClick"
                        Cursor="Hand"
                        Padding="12,5"
                        Background="#DC2626"
                        Foreground="White"
                        BorderThickness="0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="ButtonBorder" 
                                    Background="{TemplateBinding Background}" 
                                    CornerRadius="4" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#B91C1C"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#991B1B"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸšª" FontSize="12" Margin="0,0,6,0"/>
                        <TextBlock Text="Exit Exam" FontSize="11" FontWeight="SemiBold"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
        </Border>
        
        <!-- Network Panel Popup -->
        <Popup x:Name="NetworkPopup"
               PlacementTarget="{Binding ElementName=InternetStatusBorder}"
               Placement="Top"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Fade">
            <local:NetworkPanel x:Name="NetworkPanelControl"
                                CloseRequested="OnNetworkPanelClose"
                                NetworkChanged="OnNetworkChanged"/>
        </Popup>
    </Grid>
</UserControl>
